<body>
    <div id="earth">ğŸŒ</div>
    <div id="moon">ğŸŒ‘</div>

    <script>
        const moon = document.getElementById('moon');
        const earth = document.getElementById('earth');
        const moonPhases = ['ğŸŒ‘', 'ğŸŒ’', 'ğŸŒ“', 'ğŸŒ”', 'ğŸŒ•', 'ğŸŒ–', 'ğŸŒ—', 'ğŸŒ˜'];
        const earthPhases = ['ğŸŒ', 'ğŸŒ', 'ğŸŒ'];
        let currentMoonPhase = 0;
        let currentEarthPhase = 0;
        let lastMouseX = window.innerWidth / 2;

        // åœ°çƒå‹•ç•«
        setInterval(() => {
            currentEarthPhase = (currentEarthPhase + 1) % earthPhases.length;
            earth.textContent = earthPhases[currentEarthPhase];
        }, 1000); // æ¯ç§’åˆ‡æ›ä¸€æ¬¡åœ°çƒ

        // æœˆç›¸è®ŠåŒ–
        setInterval(() => {
            currentMoonPhase = (currentMoonPhase + 1) % moonPhases.length;
            moon.textContent = moonPhases[currentMoonPhase];
        }, 200);

        // è·Ÿéš¨æ»‘é¼ ä¸¦èª¿æ•´åœ–å±¤
        document.addEventListener('mousemove', (e) => {
            const centerX = window.innerWidth / 2;
            moon.style.left = `${e.clientX}px`;
            moon.style.top = `${e.clientY}px`;

            // åˆ¤æ–·æ»‘é¼ ç§»å‹•æ–¹å‘ä¸¦èª¿æ•´åœ–å±¤
            if (e.clientX > lastMouseX) { // å‘å³ç§»å‹•
                moon.style.zIndex = "400"; // æœˆäº®åœ¨åœ°çƒä¸‹é¢
            } else if (e.clientX < lastMouseX) { // å‘å·¦ç§»å‹•
                moon.style.zIndex = "600"; // æœˆäº®åœ¨åœ°çƒä¸Šé¢
            }
            lastMouseX = e.clientX;
        });

        // å‰µå»ºæ˜Ÿæ˜Ÿ
        function createStars() {
            const starCount = Math.floor((window.innerWidth * window.innerHeight) / 2000);
            for (let i = 0; i < starCount; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                
                const x = Math.random() * window.innerWidth;
                const y = Math.random() * window.innerHeight;
                const size = Math.random() * 2 + 2;
                
                star.style.left = `${x}px`;
                star.style.top = `${y}px`;
                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                
                document.body.appendChild(star);
                animateStar(star);
            }
        }
        
        function animateStar(star) {
            setInterval(() => {
                const opacity = Math.random() * 0.9 + 0.1;
                star.style.opacity = opacity;
            }, Math.random() * 4000 + 1000);
        }

        window.addEventListener('resize', () => {
            document.querySelectorAll('.star').forEach(star => star.remove());
            createStars();
        });

        createStars();
    </script>
